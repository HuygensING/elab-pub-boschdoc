html, body
	background-color #fff
	font-family sans-serif
	font-size 12px
	margin 0
	padding 0
	font-family 'Merriweather Sans', sans-serif

html 
	box-sizing border-box

*, *:before, *:after 
	box-sizing inherit

ul
	list-style none
	margin 0
	padding 0


a
	cursor pointer

h1
	font-weight bold
	font-size 2em
	margin 0

.app
	max-width 1400px
	margin 0 auto


.entry > h2
	margin 0

.app > header
	height 80px

.app > header > h1
	float left


.app > header > nav,
.app > header > img
	float right

.app > header > nav
	line-height 80px
	margin-right 30px

.app > header > nav > a
	color black

.app > header > nav > a.selected
	font-weight bold

article.entry .text
	position relative
	z-index 1
	width 480px

article.entry.fixed-content .text
	margin-top 20px

article.entry .hi-textlayer h2
	display none

article.entry.fixed-content > h2
	position fixed
	top 0
	width 100%
	background-color rgb(255,255,255)
	z-index 2


.hi-textlayer > div
	font-family: 'Merriweather', serif
	font-size 16px

article.entry .facsimile
	position absolute
	width 100%
	max-width 1400px
	margin 0 auto
	padding-left 540px
	height calc(100% - 80px)
	z-index 0


article.entry.fixed-content .facsimile
	position fixed
	top 20px


article.entry .facsimile iframe
	height 100%
	width 100%
	border none

@media screen and (min-width: 1200px)
	article.entry .text
		width calc(450px + 150px)

	article.entry .facsimile
		padding-left 720px 

	.hi-textlayer > *
		float left
		clear left
		width calc(100% - 150px)

	.hi-annotations
		position relative
		top 0
		float right
		clear none
		width 150px
		overflow hidden
		margin-top 0


.hire-faceted-search
	background-color #eee