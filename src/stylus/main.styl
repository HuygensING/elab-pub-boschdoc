html, body
	background-color #fff
	font-family sans-serif
	font-size 12px
	margin 0
	padding 0
	font-family 'Merriweather Sans', sans-serif
	line-height 1.5em
	color #333

html 
	box-sizing border-box

*, *:before, *:after 
	box-sizing inherit

ul
	list-style none
	margin 0
	padding 0


a
	cursor pointer
	color #333
	text-decoration none

a:hover
	text-decoration underline
h1
	font-weight bold
	font-size 2em
	margin 0
	float left
	line-height 2em

.app
	max-width 1400px
	margin 0 auto
	padding-left 30px
	padding-right 30px

.entry > h2
	margin 0

.app > header
	height 80px


.app > header > nav,
.app > header > img
	float right

.app > header > nav
	line-height 80px
	margin-right 30px

.app > header > nav > a
	color black

.app > header > nav > a.selected
	font-weight bold

.hire-tabs ul li
	font-size 14px
	cursor pointer
	display inline-block
	background-color #eee
	border-radius 10px
	padding 6px
	margin-top 30px
	margin-bottom 30px
	margin-right 15px
	color #666

.hire-tabs ul li.active
	font-weight bold
	color #333
	background-color #fff
	font-style italic

article.entry .text
	position relative
	z-index 1
	width 480px



article.entry.fixed-content .text
	margin-top 100px

article.entry .hi-textlayer > div
	line-height 2em

article.entry .hi-textlayer h2
	display none

article.entry.fixed-content .hire-tabs ul
	position fixed
	background-color #fff
	width 450px
	top 14px
	z-index 2

article.entry.fixed-content > h2
	position fixed
	top 0
	width 100%
	background-color rgb(255,255,255)
	z-index 2


.hi-textlayer > div
	font-family: 'Merriweather', serif
	font-size 16px

article.entry .facsimile
	position absolute
	width 100%
	max-width 1400px
	margin 0 auto
	padding-left 540px
	padding-right 60px
	height calc(100% - 100px)
	z-index 0

article.entry.fixed-content .facsimile
	position fixed
	top 20px


article.entry .facsimile iframe
	height 100%
	width 100%
	border none


.hi-annotations a 
	text-decoration none

.hi-annotations li:hover a
	text-decoration underline

@media screen and (min-width: 1200px)
	article.entry .text,
	article.entry.fixed-content .hire-tabs ul
		width calc(450px + 150px)

	article.entry .facsimile
		padding-left 720px 

	.hi-textlayer > *
		float left
		clear left
		width calc(100% - 150px)

	.hi-annotations
		position relative
		top 0
		float right
		clear none
		width 150px
		overflow hidden
		margin-top 0


.hire-faceted-search
	background-color #eee