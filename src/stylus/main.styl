html, body
	background-color #fff
	font-family sans-serif
	font-size 12px
	margin 0
	padding 0
	font-family 'Merriweather Sans', sans-serif

html 
	box-sizing border-box

*, *:before, *:after 
	box-sizing inherit

ul
	list-style none
	margin 0
	padding 0

a
	cursor pointer

h1
	font-weight bold
	font-size 2em
	margin 0

h2
	font-weight bold
	font-size 1.5em
	margin 0

.container > header
	height 80px

.container > header > h1
	float left


.container > header > nav,
.container > header > img
	float right

.container > header > nav
	line-height 80px
	margin-right 30px

.container > header > nav > a
	color black

.container > header > nav > a.selected
	font-weight bold

article.entry .text
	position relative
	left calc(100% - 480px)
	width 480px
	padding-right 30px

article.entry.fixed-content > h2
	position fixed
	top 0
	width 100%
	background-color #fff
	z-index 1


.hi-textlayer > div
	font-family: 'Merriweather', serif
	font-size 16px

article.entry .facsimile
	position absolute
	width calc(100% - 480px - 60px - 30px)
	height calc(100% - 80px)


article.entry.fixed-content .facsimile
	position fixed
	top 20px


article.entry .facsimile iframe
	height 100%
	width 100%
	border none

@media screen and (min-width: 1200px)
	article.entry .text
		left calc(100% - 450px - 150px)
		width calc(450px + 150px)

	.hi-textlayer > *
		float left
		clear left
		width calc(100% - 150px)

	.hi-annotations
		position relative
		top 0
		float right
		clear none
		width 150px
		overflow hidden


.hire-faceted-search
	background-color #eee