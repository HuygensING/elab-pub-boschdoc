html, body
	background-color #fff
	font-family sans-serif
	font-size 16px
	margin 0
	padding 0
	font-family 'Merriweather Sans', sans-serif
	font-weight 300
	line-height 1.5em
	color #333

html 
	box-sizing border-box

*, *:before, *:after 
	box-sizing inherit

ul
	list-style none
	margin 0
	padding 0


a
	cursor pointer
	display inline-block
	color #333
	text-decoration none

a:hover
	border-bottom 1px dotted rgb(0,105,140);

h1
	font-weight 700
	font-size 2em
	margin 0
	float left
	line-height 2em

h2
	font-weight 700
	color:rgb(17,17,17)

.app
	max-width 1400px
	margin 0 auto
	padding-left 30px
	padding-right 30px

.entry > h2
	margin 0
	font-size 18px

.app > header
	height 80px


.app > header > a > img
	float left

.app > header > nav,
.app > header > img.hi-logo
	float right

.app > header > nav
	margin-top 30px
	margin-right 30px

.app > header > nav > a
	color black

.app > header > nav > a.selected
	font-weight 700

.hire-tabs ul li
	font-size 14px
	cursor pointer
	display inline-block
	background-color #eee
	border-radius 10px
	padding 6px
	margin-top 30px
	margin-bottom 30px
	margin-right 15px
	color #666

.hire-tabs ul li.active
	font-weight 700
	color #333
	background-color #fff
	font-style italic

article.entry
	margin-top 20px

article.entry .text
	position relative
	z-index 1
	width 480px



article.entry.fixed-content .text
	margin-top 110px

article.entry .hi-textlayer > div
	line-height 1.5em

article.entry .hi-textlayer h2
	display none

article.entry.fixed-content .hire-tabs ul
	position fixed
	background-color #fff
	width 480px
	top 14px
	z-index 2

article.entry.fixed-content > h2
	position fixed
	top 0
	padding-top 6px
	width 100%
	background-color rgb(255,255,255)
	z-index 2


.hi-textlayer > div
	font-family: 'Merriweather', serif

article.entry .facsimile
	position absolute
	width calc(100% - 30px)
	max-width 1400px
	margin 0 auto
	padding-left 540px
	padding-right 30px
	height calc(100% - 150px)
	z-index 0

article.entry.fixed-content .facsimile
	position fixed
	top 20px


article.entry .facsimile iframe
	height 100%
	width 100%
	border none

.hi-annotations
	border none

.hi-annotations a 
	text-decoration none

.hi-annotations li
	margin-bottom 1em

.hi-annotations li a
	display inline


.hi-annotations li:hover a > span
	border-bottom 1px dotted rgb(0,105,140);

.hi-annotation-highlight,
.hi-text-highlight
	background-color #ffa


@media screen and (min-width: 1200px)
	article.entry .text,
	article.entry.fixed-content .hire-tabs ul
		width calc(450px + 150px)

	article.entry .facsimile
		padding-left 720px 

	.hi-textlayer > *
		float left
		clear left
		width calc(100% - 150px)

	.hi-annotations
		position relative
		top 0
		float right
		clear none
		width 150px
		overflow hidden
		margin-top 0


.hire-faceted-search
	width 100%
	padding 0

li.hire-faceted-search-text-search input
	width 100%
	border 1px solid rgb(221,221,221)
	border-radius 4px
	background-color #fff
	float left

li.hire-faceted-search-text-search .search-icon
	position relative
	top -40px
	float right

li.hire-faceted-search-text-search .search-icon .center-vertical svg
	fill #ddd

li.hire-faceted-search-text-search .search-icon	
	width 8%

.hire-faceted-search > .hire-faceted-search-facets
	width 450px


.hire-faceted-search > .hire-faceted-search-results
	width calc(100% - 450px)
	padding-left 60px

li.hire-list-facet
	padding 0

li.hire-list-facet > header > h3
	font-weight normal
	font-style italic

.hire-faceted-search-filter-menu > .hire-input
	width 100%


.hire-faceted-search-filter-menu > .hire-input > input
	border 1px solid rgb(221,221,221)
	border-radius 4px
	background-color #fff


.hire-faceted-search-results > ul > li
	background-color rgb(250,250,250)
	border-radius 4px
	border 1px solid rgb(230,230,230)
	padding 15px

.hire-faceted-search-results > ul.hire-faceted-search-pagination > li
	background-color #fff
	border none
	padding 0

.hire-faceted-search-results > ul > li > label
	font-weight 700
	font-size 16px


.hire-faceted-search-results > ul > li:hover > label
	border-bottom 1px dotted rgb(0,105,140);

.hire-faceted-search-results > ul > li > ul.metadata
	margin-top 15px

.hire-faceted-search-results > ul > li > ul.metadata > li > label
	font-size 16px
	font-weight 300
	font-style italic
	color #666
	width 170px

.hire-faceted-search-results > ul > li > ul.metadata > li > span
	font-size 16px
	color #666

li.hire-list-facet > ul > li.hire-list-facet-list-item label
	font-size 12px